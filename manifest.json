{
  "manifest_version": 3,
  "name": "simcheck",
  "description": "a chrome extension which uses transformers.js to generate and compare vector embeddings",
  "version": "0.0.1",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "simcheck"
  },
  "options_page": "html/options.html",
  "minimum_chrome_version": "92",
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
  },
  "icons": {
    "16": "icons/dragon16.png",
    "32": "icons/dragon32.png",
    "64": "icons/dragon64.png",
    "128": "icons/dragon128.png"
  }
}
